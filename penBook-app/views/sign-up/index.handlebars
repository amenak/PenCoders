<div class="container-fluid">
	<link href="/css/sign-upStyle.css" rel="stylesheet">
    	<div class="row">
			<div class="col-md-6 col-md-offset-3">
					<div class="panel-body">
						<div class="col-lg-6 col-lg-offset-6 sign-upBox">
							<h2> Sign up</h2>
							{{#each error}}
        					<div class="alert alert-danger">{{this}}</div>
     						{{/each}}
							<form id="register-form" action="/sign-up" method="post" role="form">
									<label>First name</label>
									<input type="text" name="firstName" id="firstName" tabindex="1" class="form-control" placeholder="First Name" value="">
									<label>Last name</label>
									<input type="text" name="lastName" id="lastName" tabindex="1" class="form-control" placeholder="Last Name" value="">
									<label>Username</label>
									<input type="text" name="username" id="username" tabindex="1" class="form-control" placeholder="Username" value="">
									<label>Email</label>
									<input type="text" name="email" id="email" tabindex="1" class="form-control" placeholder="Email Address" value="">
									<label>Password</label>
									<input type="password" name="password" id="password" tabindex="2" class="form-control" placeholder="Password">
									<button type="submit" name="register-submit" id="register-submit" tabindex="4" class="form-control btn btn-register" value="Register Now"> Signup </button>
							</form>			
						</div>
					</div>
			</div>
		</div>