  <script>
    $(document).ready(function(){
    $('.dropdown-menu').find('form').click(function (e) {
        e.stopPropagation();
    });
});
  </script>
  
 {{#if cur_user}}
  <script>
    (function() {
      $('#logout').click(function() {
        $.post("/logout", function() {
          window.location.href = '/';
        });
      });
    })();
  </script>
  {{/if}}
