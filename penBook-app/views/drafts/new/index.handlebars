<link href="/css/DraftStyle.css" rel="stylesheet">

<div id="draft" class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      <form name="create-draft" action="/drafts" method="post">
        <div class="row control-group">
          <div class="form-group col-xs-12 floating-label-form-group controls">
            <label>Title</label>
            <input type="text" class="form-control" placeholder="Title" name="title" required data-validation-required-message="Please enter a title.">
            <p class="help-block text-danger"></p>
          </div>
        </div>
        <div class="row control-group">
          <div class="form-group col-xs-12 floating-label-form-group controls">
            <label>Genre</label>
            <input type="text" class="form-control" placeholder="Genre" name="genre" required data-validation-required-message="Please enter a genre.">
            <p class="help-block text-danger"></p>
          </div>
        </div>
        <div class="row control-group">
          <div class="form-group col-xs-12 floating-label-form-group controls">
            <label>Text</label>
            <textarea id="txtEditorr" type="text" class="form-control" name="text" required data-validation-required-message="Please enter a body."></textarea>
            <p class="help-block text-danger"></p>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="form-group col-xs-12 text-center">
              <button type="submit" class="btn btn-success btn-lg">Save</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
