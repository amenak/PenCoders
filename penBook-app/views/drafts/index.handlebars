<div class="container">
  <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <h1>All Drafts</h1>
        {{#if cur_user}}
        <div class="create-draft">
          <a class="btn btn-default" href="/drafts/new">Create a new draft</a>
        </div>
        {{/if}}
        {{#each allDraftChapters}}
          <div class="draft-preview">
              <a href="/drafts/{{this.user.username}}/{{this.slug}}">
                  <h2 class="draft-title">
                      {{this.title}} 
                  </h2>
                   <span class="subheading">{{this.genre}}</span>
              </a>
              <p class="draft-meta">Posted by <a href="/User/{{this.user.username}}">{{this.user.username}}</a></p>
          </div>
          <hr>
        {{/each}}
      </div>
  </div>
</div>