<link href="/css/DraftStyle.css" rel="stylesheet">
<div id="draft" class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      <form name="edit-draft" method="POST" action="/drafts/{{draft.User.username}}/{{draft.slug}}?_method=PUT">
        <div class="row control-group">
          <div class="form-group col-xs-12 floating-label-form-group controls">
            <label>Title</label>
            <input type="text" class="form-control" name="title" value="{{draft.title}}" required data-validation-required-message="Please enter a title.">
            <p class="help-block text-danger"></p>
          </div>
        </div>
        <div class="row control-group">
          <div class="form-group col-xs-12 floating-label-form-group controls">
            <label>Text</label>
            <input id="txtEditorr" type="text" class="form-control" name="text" value="{{draft.text}}" required data-validation-required-message="Please enter a text.">
            <p class="help-block text-danger"></p>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="form-group col-xs-6 text-right">
              <button type="submit" class="btn btn-warning">Edit</button>
          </div>
      </form>
      <form name="delete-draft" method="POST" action="/drafts/{{draft.User.username}}/{{draft.slug}}?_method=DELETE">
          <div class="form-group col-xs-6 text-left">
            <button type="submit" class="btn btn-danger">Delete</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>